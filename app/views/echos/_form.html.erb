<%= form_with(model: echo, local: true) do |form| %>
  <% if echo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(echo.errors.count, "error") %> prohibited this echo from being saved:</h2>

      <ul>
      <% echo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div id="contentNew">
  <div id="margins">
    <div class="form-group">
      <%= form.label :title %><br>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :content %><br>
      <%= form.text_area :content, size: "100x10", class: "form-control"%>
    </div>

    <hr>

    <div class="actions">
      <%= form.submit "Make it heard", class: "btn btn-kg btn-primary pull-right" %>
      <%= link_to "Back to Main Page", echos_path , class: "btn btn-default" %>
    </div>
  </div>
</div>
<% end %>