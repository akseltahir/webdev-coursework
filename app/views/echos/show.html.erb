<div class="page-header">
  <h1>
    <%= @echo.title %></a><br>
    <hr>
    <%= @echo.content %></a><br>
    <small>Submitted by <%= @echo.user.email %></small>
  </h1>
</div>
<div class="btn-group">
  <%= link_to 'Back', echos_path, class: "btn btn-primary" %>
</div>
<% if @echo.user == current_user %>
  <div class="btn-group">
    <%= link_to 'Edit', edit_echo_path(@echo), class: "btn btn-default" %>
    <%= link_to 'Destroy', @echo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
  </div>
  
  <div class="btn-group pull-right">
   	<%= link_to upvote_echo_path(@echo), method: :put, class: "btn btn-default btn-sm" do %>
 		<span class="glyphicon glyphicon-chevron-up"></span>
 		Upvote
 		<%= @echo.get_upvotes.size %>
 				<% end %>
  	<%= link_to downvote_echo_path(@echo), method: :put, class: "btn btn-default btn-sm" do %>
  	<span class="glyphicon glyphicon-chevron-down"></span>
  	Downvote
  	<%= @echo.get_downvotes.size %>
  	<% end %>
 	</div>

<% end %>